{
  "name": "a11yisimportant",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:AnandChowdhary/a11yisimportant.git",
  "author": "Anand Chowdhary <anandchowdhary@gmail.com>",
  "license": "MIT",
  "scripts": {
    "watch": "concurrently 'yarn nodemon' 'yarn build-watch' 'yarn prettier-watch'",
    "build-watch": "onchange '*.ts' -- yarn build",
    "build": "tsc && cp .env dist/.env",
    "start": "node dist/server.js",
    "nodemon": "nodemon dist/server.js",
    "prettier-watch": "onchange '**/*.{ts,json}' -- prettier --write {{changed}}",
    "test": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test-without-reporting": "jest --coverage",
    "test-without-coverage": "jest"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.12.1",
    "@types/twitter": "^1.7.0",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.3",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "onchange": "^5.2.0",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.4000",
    "yarn": "^1.15.2"
  },
  "dependencies": {
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "promise-serial": "^0.1.5",
    "twitter": "^1.7.1"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
